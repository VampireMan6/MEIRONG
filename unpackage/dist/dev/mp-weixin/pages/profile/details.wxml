<view><view class="flex p-xs padding"><view class="flex-twice margin-xs"><view class="text-xl">{{BookInfo.name}}</view><view class="margin-top">{{BookInfo.author}}</view><view class="text-grey margin-top-sm"><text>{{BookInfo.sort}}</text><text class="margin-left-sm">{{BookInfo.state}}</text></view><view class="margin-top">{{BookInfo.update_time}}</view></view><view class="flex-sub margin-xs"><image class="radius img-box" src="{{BookInfo.img}}" mode="widthFix" lazy-load></image></view></view><scroll-view class="bg-white nav" scroll-x scroll-with-animation><block wx:for="{{TabData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item',index==TabCur?'text-orange cur':'']}}" data-id="{{index}}" data-event-opts="{{[['tap',[['tabSelect',['$event']]]]]}}" bindtap="__e">{{''+item+''}}</view></block></scroll-view><block wx:if="{{TabCur==0}}"><view class="bg-white padding solid-top margin-bottom">{{'简介：'+BookInfo.intro+''}}</view></block><block wx:else><view class="bg-white solid-top margin-bottom"><view class="cu-bar solid-bottom"><view class="action"><text class="text-sm">{{"更新至"+BookInfo.news}}</text></view><view class="action"><text data-event-opts="{{[['tap',[['orderClick',['$event']]]]]}}" bindtap="__e">{{order}}</text></view></view><view class="cu-list menu"><block wx:for="{{listData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['readClick',['$0'],[[['listData','',index,'id']]]]]]]}}" class="cu-item arrow" bindtap="__e"><view class="content">{{''+item.title+''}}</view></view></block></view></view></block><view class="cu-tabbar-height"></view><view class="cu-bar bg-white tabbar border zai-tabbar-bar"><view class="btn-group"><block wx:if="{{addBtn==false}}"><button data-event-opts="{{[['tap',[['AddClick',['$event']]]]]}}" class="cu-btn bg-orange round shadow-blur" bindtap="__e">加入书架</button></block><block wx:else><text>已加入书架</text></block></view><view class="btn-group"><button data-event-opts="{{[['tap',[['readClicks',['$event']]]]]}}" class="cu-btn bg-red round shadow-blur" bindtap="__e">立即阅读</button></view></view></view>